<div class = "container" >

  <div class="jumbotron">
  {{#each Article}}
  <h2> "{{this.title}}" </h2>
  <h4><a href= "https://www.gamespot.com/{{this.link}}" target="_blank"> {{this.link}}</a></h4><hr>
    <button type="button" data-id="{{this._id}}" class="btn btn-warning" id="add-comment" data-toggle="modal" data-target="#commentModal">Add Comment</button>
    <a href="/"> <button type="button" class="btn btn-primary save-article" >Back to Articles</button> </a>
  </div>

  {{/each}}
<br>
{{#each Article}}
{{#each this.comment}}
<div class = "well">
  <p>{{this.comment}}</p>

  <form method="DELETE" action="/delete/{{this.id}}">
     <a href="/delete"> <button class="btn btn-danger btn-sm" id="comment-delete">Delete Comment</button></a>
        </form>

  </div>
    {{/each}} {{/each}}
</div>



<!-- Modal -->

{{#each Article}}
<div id="commentModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Note Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <p>Please comment below.</p>
        <form method="POST" action="/comments/{{this._id}}">
          <div class="form-group">
            <label>Note:</label>
            <input type="comment" class="form-control" id="comment" name="comment" aria-describedby="comment" placeholder="Ex: This is great">
          </div>
          <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-default btn-primary add-comment">Submit Comment</button>
        </form>

      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
{{/each}}
